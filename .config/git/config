	ignoreCase = false
	editor = nvim
	pager = delta
[init]
	defaultBranch = main
[alias]
	st = status
	dot = "!git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME"
	hist = log --pretty=format:'%C(yellow)%h %C(blue)%ah %C(green)%an  â—¯ %C(reset)%s%C(auto)%d %C(reset)' --graph --all
[diff]
	tool = nvimdiff
	colorMoved = default
[interactive]
